	<Style x:Key="ColorPaletteWithBottomDescriptionViewStyle"
		   TargetType="controls:ColorPaletteView">

		<Setter Property="Padding"
				Value="20,16" />
		<Setter Property="ColorHeight"
				Value="88" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:ColorPaletteView">
					<StackPanel>
						<Grid Background="{TemplateBinding ColorBrush}"
							  BorderThickness="{TemplateBinding BorderThickness}"
							  BorderBrush="{TemplateBinding BorderBrush}"
							  Height="{TemplateBinding ColorHeight}"
							  Padding="{TemplateBinding Padding}">

							<Grid.RowDefinitions>
								<RowDefinition Height="auto" />
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>

							<TextBlock Text="{TemplateBinding ColorName}"
									   Style="{StaticResource MaterialHeadline6}"
									   Foreground="{TemplateBinding OnColorBrush}" />

							<TextBlock Text="{TemplateBinding ColorHex}"
									   Style="{StaticResource MaterialSubtitle2}"
									   Foreground="{TemplateBinding OnColorBrush}"
									   Margin="0,4,0,0"
									   Grid.Row="1" />
						</Grid>

						<TextBlock Text="{TemplateBinding Description}"
								   Style="{StaticResource MaterialCaption}"
								   Foreground="{StaticResource Foreground04ColorBrush}"		   
								   Margin="0,16,0,0" />
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="controls:ColorPaletteView"
		   BasedOn="{StaticResource SimpleColorPaletteViewStyle}" />
</ResourceDictionary>
